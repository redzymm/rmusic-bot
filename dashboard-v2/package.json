{
    "name": "rmusic-ultra",
    "version": "1.1.0",
    "description": "RMusic Ultra - Discord Music Bot Dashboard",
    "main": "main.js",
    "author": "REDZYMM STUDIO",
    "scripts": {
        "dev": "node dev.js",
        "build": "vite build",
        "preview": "vite preview",
        "electron:dev": "electron ."
    },
    "build": {
        "appId": "com.redzymm.rmusic-ultra",
        "productName": "RMusic Ultra",
        "directories": {
            "output": "installer"
        },
        "files": [
            "dist/**/*",
            "main.js",
            "dev.js",
            "splash.html",
            "icon.ico",
            "icon.png"
        ],
        "asarUnpack": [
            "node_modules/@electron/remote/**/*"
        ],
        "win": {
            "target": "portable",
            "icon": "icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "RMusic Ultra"
        }
    },
    "dependencies": {
        "@electron/remote": "^2.1.3",
        "framer-motion": "^10.16.4",
        "lucide-react": "^0.284.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "ws": "^8.19.0"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^4.1.0",
        "autoprefixer": "^10.4.16",
        "electron": "^27.0.0",
        "electron-builder": "^24.9.1",
        "electron-packager": "^17.1.2",
        "postcss": "^8.4.31",
        "tailwindcss": "^3.3.3",
        "vite": "^4.4.11"
    }
}
